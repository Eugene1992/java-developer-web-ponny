<?xml version="1.0" encoding="ISO-8859-1" ?>

<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
         version="2.4">

    <display-name>HelloWorld Application</display-name>
    <description>
        This is a simple web application with a source code organization
        based on the recommendations of the Application Developer's Guide.
    </description>


    <servlet>
        <servlet-name>ProductServlet</servlet-name>
        <servlet-class>com.cbsystematics.edu.internet_shop.servlets.ProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProductServlet</servlet-name>
        <url-pattern>/products</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>DiscountServlet</servlet-name>
        <servlet-class>com.cbsystematics.edu.internet_shop.servlets.DiscountServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DiscountServlet</servlet-name>
        <url-pattern>/discounts</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>com.cbsystematics.edu.internet_shop.servlets.UserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/users</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>AdminServlet</servlet-name>
        <servlet-class>com.cbsystematics.edu.internet_shop.servlets.AdminServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminServlet</servlet-name>
        <url-pattern>/admin</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>HomeServlet</servlet-name>
        <servlet-class>com.cbsystematics.edu.internet_shop.servlets.HomeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomeServlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>NewUserServlet</servlet-name>
        <servlet-class>com.cbsystematics.edu.internet_shop.servlets.NewUserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>NewUserServlet</servlet-name>
        <url-pattern>/admin/users/new</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>NewDiscountServlet</servlet-name>
        <servlet-class>com.cbsystematics.edu.internet_shop.servlets.NewDiscountServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>NewDiscountServlet</servlet-name>
        <url-pattern>/admin/discounts/new</url-pattern>
    </servlet-mapping>


    <servlet>
    <servlet-name>NewProductServlet</servlet-name>
    <servlet-class>com.cbsystematics.edu.internet_shop.servlets.NewProductServlet</servlet-class>
</servlet>
    <servlet-mapping>
        <servlet-name>NewProductServlet</servlet-name>
        <url-pattern>/admin/products/new</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>UserRegisterServlet</servlet-name>
        <servlet-class>com.cbsystematics.edu.internet_shop.servlets.UserRegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserRegisterServlet</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.cbsystematics.edu.internet_shop.servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>


    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>com.cbsystematics.edu.internet_shop.security.AuthFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>


</web-app>